<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
 <div class="main w-full min-h-screen text-white bg-black">
    <div class="form  p-10 ">
        <form action="/create" method="post">
            <input class="bg-zinc-900 w-full rounded-md mt-2block px-5 py-2" type="text" placeholder="title goes here " name="title">
            <textarea  class="bg-zinc-900  w-full rounded-md  mt-2 block px-5 py-2 resize-none " name="details" id="" placeholder="task goes here"></textarea>
            <input class="bg-blue-600  px-5 py-2 rounded-md  mt-2" type="submit" value="create task">
        </form>

    </div>

    <div class="tasks p-10 flex gap-3 flex-wrap">
        <% if(files.length>0){ %>

        
        <% files.forEach(function(val){ %>
            <div class="task w-62 px-3 bg-zinc-900 rounded-md py-4 ">
            <h1><%= val %> </h1>
            <a href="" class="text-blue-500">Read more</a>
        </div>
        
        <% }) %>
        <% } else {%>
            <h3 class="text-zinc-200">no task yet</h3>
        <% } %>
        
    </div>
 </div>
</body>
</html>