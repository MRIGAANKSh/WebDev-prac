<%- include('./partials/header') %>

<div class="w-full min-h-screen px-20 py-20">
  <div class="flex flex-col gap-10">
    <% let totalAmount = 0; %>

    <% user.cart.forEach(function(item, index) { 
        let net = item.price - item.discount;
        totalAmount += net;
    %>
      <div class="w-full flex gap-10">
        <!-- LEFT: Product Image and Info -->
        <div class="w-[30%] rounded-md overflow-hidden">
          <div class="w-full flex justify-center items-center h-80" style="background-color:<%= item.bgcolor %>">
            <img class="h-[20rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
          </div>
          <div class="w-full flex justify-between px-5 py-4" style="background-color:<%= item.panelcolor %>">
            <h3 class="text-2xl"><%= item.name || "Product " + (index + 1) %></h3>
            <div class="flex items-center gap-2">
              <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
              <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
              <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
            </div>
          </div>
          <div class="flex items-center justify-between px-5 py-3" style="background-color:<%= item.textcolor %>">
            <h4 class="text-lg">Net Total</h4>
            <h2 class="text-lg">₹ <%= net %></h2>
          </div>
        </div>

        <!-- RIGHT: Price Breakdown -->
        <div class="w-[70%]">
          <h3 class="text-xl">Price Breakdown</h3>
          <div class="px-10 mt-5">
            <div class="flex mt-2">
              <h4 class="w-1/3">Total MRP</h4>
              <h4>₹ <%= item.price %></h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Discount on MRP</h4>
              <h4>₹ <%= item.discount %></h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Platform Fee</h4>
              <h4>₹ 0</h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Shipping Fee</h4>
              <h4>FREE</h4>
            </div>
          </div>
        </div>
      </div>
    <% }); %>

    <!-- Final Total Calculation -->
    <div class="w-full h-[1px] bg-black mt-10"></div>
    <div class="flex justify-between mt-5 px-10">
      <h3 class="text-2xl font-semibold">Final Total Amount</h3>
      <h3 class="text-2xl font-semibold text-green-600">₹ <%= totalAmount + 20 %></h3>
    </div>
    <p class="text-right text-gray-500 pr-10 mt-1">Includes ₹20 platform fee</p>
  </div>
</div>

<%- include('./partials/footer') %>
